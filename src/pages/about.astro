---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="about-section">
    <header class="text-center py-10">
      <h1 class="text-4xl font-bold">About Us</h1>
      <p class="mt-4 text-xl">Learn more about our team and mission</p>
    </header>
    <main class="container mx-auto px-4">
      <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white text-black rounded-lg shadow-lg p-6">
          <img
            src="/path/to/image1.jpg"
            alt="Team Member 1"
            class="w-full h-48 object-cover rounded-t-lg"
          />
          <h2 class="text-2xl font-bold mt-4">Team Member 1</h2>
          <p class="mt-2">Description of team member 1.</p>
        </div>
        <div class="bg-white text-black rounded-lg shadow-lg p-6">
          <img
            src="/path/to/image2.jpg"
            alt="Team Member 2"
            class="w-full h-48 object-cover rounded-t-lg"
          />
          <h2 class="text-2xl font-bold mt-4">Team Member 2</h2>
          <p class="mt-2">Description of team member 2.</p>
        </div>
        <div class="bg-white text-black rounded-lg shadow-lg p-6">
          <img
            src="/path/to/image3.jpg"
            alt="Team Member 3"
            class="w-full h-48 object-cover rounded-t-lg"
          />
          <h2 class="text-2xl font-bold mt-4">Team Member 3</h2>
          <p class="mt-2">Description of team member 3.</p>
        </div>
      </section>
    </main>
  </div>
</Layout>
